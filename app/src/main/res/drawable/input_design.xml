<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan di bawah -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80000000"
                android:endColor="@android:color/transparent"
                android:angle="90" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Lapisan latar belakang utama -->
    <item android:top="0dp" android:bottom="4dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna putih untuk latar -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Garis tepi -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>